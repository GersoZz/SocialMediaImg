<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{image.title}}</h2>
    <button
      class="btn btn-danger"
      id="btn-delete"
      data-id="{{image.uniqueId}}"
    ><i class="fa fa-times"></i> Delete</button>

  </div>
  <div class="card-body">
    <p>{{image.description}}</p>
    <div class="text-center">
      <img src="/public/upload/{{image.filename}}" class="img-fluid" alt="" />
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button
      class="btn btn-success"
      id="btn-like"
      data-id="{{image.filename}}"
    ><i class="fas fa-thumbs-up"></i> Like</button>
    <p>
      <span class="likes-count">{{image.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    <p>
      <i class="fas fa-eye"></i>
      {{image.views}}
    </p>
    <p>
      <i class="far fa-clock"></i>
      {{timeago image.timestamp}}
    </p>
  </div>
</div>

{{! Comentarios }}

<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">

    <h3 class="card-title">Comment</h3>
    <button class="btn btn-secondary" id="btn-toggle-comment">
      <i class="fa fa-comment-o"></i>
      Post a comment
    </button>

  </div>

  <div class="card-body">
    <blockquote id="post-comment">
      <form action="/images/{{image.uniqueId}}/comment" method="POST">
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder="Name"
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="email"
            placeholder="Email"
          />
        </div>

        <div class="mb-3">
          <textarea
            name="comment"
            rows="2"
            class="form-control"
            placeholder="Your comment"
          ></textarea>
        </div>

        <div class="mb-3">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i>
            Post
          </button>
        </div>
      </form>
    </blockquote>

    <ul class="list-group p-4">
      {{#each comments}}
        <li class="list-group-item">
          <div class="row align-items-center">
            <div class="col-4 text-center">
              <img
                src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45"
              />
            </div>
            <blockquote class="col-8 align-items-center">
              <p class="lead">{{comment}}</p>
              <footer class="blockquote-footer">
                {{name}}-{{timeago timestamp}}
              </footer>
            </blockquote>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>